<%- include("header") -%>

<a href="/client/cart">
    <image style="width:50px; height:50px" src="/images/cart.png"/>
</a>
<h2>⬇️ Here goes product data ⬇️</h2>
<div id="underwearResultsContainer">
    <table>
        <% for(var i = 0; i < productsData.length; i++) { %>
            <tr>
                <td><%= productsData[i].underwear_id %></td>
                <td><%= productsData[i].underwear_model_id %></td>
                <td><%= productsData[i].size %></td>
                <td><%= productsData[i].color %></td>
                <td><%= productsData[i].sku %></td>
                <td><%= productsData[i].ean %></td>
                <td><%= productsData[i].quantity %></td>
                <td><%= productsData[i].price %></td>
                <td style="width:25px; height:25px; text-align:center; vertical-align:middle">
                    <form onclick="this.form.submit()" action='/client/addToCart' method="post">
                        <input type="hidden" name="underwear_id" value="<%= productsData[i].underwear_id %>">
                        <input type="image" src="/images/cart.png" name="submit" style="width:50px;">
                        <!--                        <img onclick="this.form.submit()" src="/images/cart.png" style="max-height:100%; max-width:100%"/>-->
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</div>

<%- include("footer") -%>
